<api xmlns="http://ws.apache.org/ns/synapse" name="USECASE_1" context="/usecases">
   <resource methods="GET" uri-template="/first?myArg1={arg1}&myArg2={arg2}">
      <inSequence>
         <log level="full"></log>
         <payloadFactory media-type="xml">
            <format>
               <POST>
                  <myArg1>$1</myArg1>
                  <myArg2>$2</myArg2>
               </POST>
            </format>
            <args>
               <arg evaluator="xml" expression="get-property('uri.var.arg1')"></arg>
               <arg evaluator="xml" expression="get-property('uri.var.arg2')"></arg>
            </args>
         </payloadFactory>
         <property name="messageType" value="application/x-www-form-urlencoded" scope="axis2" type="STRING"></property>
         <send>
            <endpoint>
               <http method="POST" uri-template="http://localhost:8080/api/httppostform"></http>
            </endpoint>
         </send>
      </inSequence>
      <outSequence>
         <send></send>
      </outSequence>
   </resource>
</api>